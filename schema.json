{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dutch Government Service Definition",
  "type": "object",
  "required": [
    "uuid",
    "name",
    "law",
    "valid_from",
    "service",
    "description",
    "properties"
  ],
  "properties": {
    "uuid": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "law": {
      "type": "string"
    },
    "valid_from": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "service": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "law",
          "article",
          "url"
        ],
        "properties": {
          "law": {
            "type": "string"
          },
          "article": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      }
    },
    "properties": {
      "type": "object",
      "properties": {
        "parameters": {
          "type": "array",
          "items": {
            "allOf": [
              {
                "$ref": "#/definitions/dataField"
              },
              {
                "type": "object",
                "properties": {
                  "required": {
                    "type": "boolean"
                  }
                }
              }
            ]
          }
        },
        "sources": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/dataField"
          }
        },
        "input": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/dataField"
          }
        },
        "output": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/dataField"
          }
        },
        "definitions": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "output"
        ],
        "properties": {
          "output": {
            "type": "string"
          },
          "operation": {
            "type": "string"
          },
          "value": {
            "type": [
              "string",
              "number",
              "object",
              "array",
              "boolean"
            ]
          },
          "values": {
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "array",
                "items": {
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "number"
                    },
                    {
                      "type": "object"
                    },
                    {
                      "type": "array"
                    },
                    {
                      "type": "boolean"
                    }
                  ]
                }
              }
            ]
          },
          "conditions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "test": {
                  "type": "object",
                  "additionalProperties": true
                },
                "then": {
                  "type": [
                    "string",
                    "number",
                    "object",
                    "array",
                    "boolean"
                  ]
                },
                "else": {
                  "type": [
                    "string",
                    "number",
                    "object",
                    "array",
                    "boolean"
                  ]
                }
              },
              "additionalProperties": true
            }
          },
          "reference": {
            "type": "string"
          },
          "subject": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "definitions": {
    "dataField": {
      "type": "object",
      "required": [
        "name",
        "description",
        "type"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "string",
            "number",
            "boolean",
            "amount",
            "object",
            "array",
            "date"
          ]
        },
        "type_spec": {
          "type": "object",
          "properties": {
            "unit": {
              "type": "string"
            },
            "precision": {
              "type": "number"
            },
            "min": {
              "type": "number"
            }
          }
        },
        "temporal": {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "period",
                "point_in_time"
              ]
            },
            "period_type": {
              "type": "string",
              "enum": [
                "year",
                "month",
                "continuous"
              ]
            },
            "reference_date": {
              "type": "string",
              "enum": [
                "january_first",
                "calculation_date",
                "birth"
              ]
            },
            "immutable_after": {
              "type": "string",
              "pattern": "^P[0-9]+[YMD]$"
            }
          }
        },
        "service_reference": {
          "type": "object",
          "required": [
            "service",
            "field",
            "law"
          ],
          "properties": {
            "service": {
              "type": "string"
            },
            "field": {
              "type": "string"
            },
            "law": {
              "type": "string"
            },
            "parameters": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "name",
                  "reference"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "reference": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "source_reference": {
          "type": "object",
          "required": [
            "table",
            "select_on"
          ],
          "properties": {
            "table": {
              "type": "string"
            },
            "field": {
              "type": "string"
            },
            "fields": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "select_on": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "name",
                  "description",
                  "type"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "oneOf": [
            {
              "required": [
                "field"
              ]
            },
            {
              "required": [
                "fields"
              ]
            }
          ]
        }
      }
    }
  }
}
