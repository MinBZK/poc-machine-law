# Makefile for python interface for package service.
# File is generated by gopy. Do not edit.
# gopy build --output=gopy_machine -vm=python3 ./service

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/usr/bin/python3
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = "-I/usr/include/python3.11"
LDFLAGS = "-L/usr/lib/x86_64-linux-gnu" "-lpython3.11" -ldl -lm

all: gen build

gen:
	gopy gen -no-make --vm=python3 ./service

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm service.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w service.go
	# generate service_go$(LIBEXT) from service.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o service_go$(LIBEXT) service.go
	# use pybindgen to build the service.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _service$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated service.py python wrapper imports this c-code package
	
	$(GCC) service.c  service_go$(LIBEXT) -o _service$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


